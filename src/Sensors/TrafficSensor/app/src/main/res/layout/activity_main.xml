<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="30sp"
        android:layout_marginBottom="5sp"
        />

    <TextView android:text="@string/sensor_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sid"
        android:layout_below="@id/title"
        android:textSize="15sp"
        android:layout_marginBottom="3sp"
        />

    <TextView android:text="@string/sensor_type" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stype"
        android:layout_below="@id/sid"
        android:textSize="15sp"
        android:layout_marginBottom="3sp"
        />

    <TextView android:text="@string/title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag"
        android:layout_below="@id/stype"
        android:textSize="25sp"
        android:layout_marginBottom="3sp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/A"
        android:textStyle="bold"
        android:layout_alignTop="@+id/B"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView android:text="Decrease Traffic:" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dec"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_above="@id/A"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/B"
        android:textStyle="bold"
        android:layout_alignTop="@+id/C"
        android:layout_alignLeft="@+id/E"
        android:layout_alignStart="@+id/E" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/C"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/F"
        android:layout_alignStart="@+id/F" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D"
        android:id="@+id/D"
        android:textStyle="bold"
        android:layout_alignTop="@+id/E"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E"
        android:id="@+id/E"
        android:textStyle="bold"
        android:layout_alignTop="@+id/F"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:id="@+id/F"
        android:textStyle="bold"
        android:layout_below="@+id/C"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
