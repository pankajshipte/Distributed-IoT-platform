<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create New Rule"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal" />

        <Space
        android:layout_width="20dp"
        android:layout_height="40dp" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give your notification msg"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal" />

        <Space
        android:layout_width="20dp"
        android:layout_height="40dp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/table1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temprature"
            android:id="@+id/tempCheck" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner1"
            />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/tempValue"
                android:layout_column="3" />
        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:id="@+id/humidityCheck" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"
            />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/humidityValue"
                android:layout_column="3" />
        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutrient Value"
                android:id="@+id/nValueCheck" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner3"
            />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/nutriValue"
                android:layout_column="3" />
        </TableRow>
        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="xyz"
                android:id="@+id/xyzCheck" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner4"
            />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/xyzValue"
                android:layout_column="3" />
        </TableRow>

    </TableLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal" />

</LinearLayout>