<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create New Rule"
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal" />

    <Space
        android:layout_width="20dp"
        android:layout_height="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notificationMsg"
        android:layout_gravity="center_horizontal"
        android:hint="Enter your notification message here"
        />

    <Space
        android:layout_width="20dp"
        android:layout_height="40dp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:id="@+id/table1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temprature"
                android:id="@+id/tempCheck" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/operators"
                android:id="@+id/tempOp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/tempValue"
                android:layout_column="3" />
        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:id="@+id/humidityCheck" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/operators"
                android:id="@+id/humOp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/humidityValue"
                android:layout_column="3" />
        </TableRow>

        <Space
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moisture"
                android:id="@+id/moistCheck" />

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/operators"
                android:id="@+id/moistOp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/moistValue"
                android:layout_column="3" />
        </TableRow>

    </TableLayout>

    <Space
        android:layout_width="20dp"
        android:layout_height="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:id="@+id/create"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
